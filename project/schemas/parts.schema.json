{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PartDefinition",
  "type": "object",
  "required": ["id", "name", "category", "tier", "weight", "cost"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]{2,48}$"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "category": {
      "type": "string",
      "enum": ["chassis", "weapon", "armor", "mobility", "sensor", "utility"]
    },
    "tier": {
      "type": "integer",
      "minimum": 1,
      "maximum": 8
    },
    "weight": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 500.0
    },
    "cost": {
      "type": "integer",
      "minimum": 0,
      "maximum": 999999
    },
    "description": {
      "type": "string",
      "maxLength": 256
    },
    "slots": {
      "type": "object",
      "properties": {
        "weapon": {"type": "integer", "minimum": 0, "maximum": 6},
        "armor": {"type": "integer", "minimum": 0, "maximum": 6},
        "mobility": {"type": "integer", "minimum": 0, "maximum": 4},
        "sensor": {"type": "integer", "minimum": 0, "maximum": 2},
        "utility": {"type": "integer", "minimum": 0, "maximum": 4}
      },
      "additionalProperties": false
    },
    "stats": {
      "type": "object",
      "properties": {
        "hp": {"type": "integer", "minimum": 0},
        "base_speed": {"type": "number", "minimum": 0},
        "base_accel": {"type": "number", "minimum": 0},
        "base_turn_rate": {"type": "number", "minimum": 0},
        "chassis_size": {"type": "number", "minimum": 5, "maximum": 100},
        "power_capacity": {"type": "number", "minimum": 0},
        "heat_capacity": {"type": "number", "minimum": 0},
        "damage_per_shot": {"type": "number", "minimum": 0},
        "fire_rate": {"type": "number", "minimum": 0.1, "maximum": 10.0},
        "range_min": {"type": "number", "minimum": 0},
        "range_optimal": {"type": "number", "minimum": 0},
        "range_max": {"type": "number", "minimum": 0},
        "accuracy": {"type": "number", "minimum": 0, "maximum": 1.0},
        "projectile_speed": {"type": "number", "minimum": 0},
        "projectile_type": {"type": "string", "enum": ["ballistic", "beam", "melee"]},
        "heat_per_shot": {"type": "number", "minimum": 0},
        "heat_dissipation_per_tick": {"type": "number", "minimum": 0},
        "overheat_threshold": {"type": "number", "minimum": 0},
        "resist_ballistic": {"type": "number", "minimum": 0, "maximum": 0.5},
        "resist_energy": {"type": "number", "minimum": 0, "maximum": 0.5},
        "resist_explosive": {"type": "number", "minimum": 0, "maximum": 0.5},
        "speed_multiplier": {"type": "number", "minimum": 0.1, "maximum": 3.0},
        "accel_multiplier": {"type": "number", "minimum": 0.1, "maximum": 3.0},
        "turn_rate_multiplier": {"type": "number", "minimum": 0.1, "maximum": 3.0},
        "detection_range": {"type": "number", "minimum": 0},
        "accuracy_bonus": {"type": "number", "minimum": 0, "maximum": 0.5},
        "regen_per_tick": {"type": "number", "minimum": 0},
        "shield_hp": {"type": "number", "minimum": 0},
        "shield_recharge_per_tick": {"type": "number", "minimum": 0}
      },
      "additionalProperties": false
    },
    "effects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "magnitude", "duration"],
        "properties": {
          "type": {"type": "string", "enum": ["slow", "stun", "burn", "emp", "armor_break"]},
          "magnitude": {"type": "number", "minimum": 0, "maximum": 1.0},
          "duration": {"type": "number", "minimum": 0, "maximum": 30.0},
          "tick_interval": {"type": "number", "minimum": 0},
          "stacking": {"type": "string", "enum": ["replace", "refresh", "stack"]}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
