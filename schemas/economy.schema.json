{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EconomyConfig",
  "type": "object",
  "required": ["starting_credits", "repair_cost_per_hp", "replay_reward_multiplier", "loss_salvage_fraction"],
  "properties": {
    "starting_credits": {
      "type": "integer",
      "minimum": 0
    },
    "repair_cost_per_hp": {
      "type": "number",
      "minimum": 0
    },
    "replay_reward_multiplier": {
      "type": "number",
      "minimum": 0,
      "maximum": 1.0
    },
    "loss_salvage_fraction": {
      "type": "number",
      "minimum": 0,
      "maximum": 1.0
    },
    "no_loss_bonus_multiplier": {
      "type": "number",
      "minimum": 1.0
    },
    "speed_bonus_threshold_ticks": {
      "type": "integer",
      "minimum": 0
    },
    "speed_bonus_multiplier": {
      "type": "number",
      "minimum": 1.0
    }
  },
  "additionalProperties": false
}
